{
  "permissions": {
    "allow": [
      "Bash(git push:*)",
      "Bash(git fetch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git worktree:*)",
      "Bash(git branch:*)",
      "Bash(command gh:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(cd:*)",
      "WebSearch",
      "Bash(bundle install:*)",
      "Bash(rails generate:*)"
    ],
    "deny": [],
    "ask": [
      "Bash(git merge:*)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/status_line.sh"
  },
  "alwaysThinkingEnabled": false,
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/send-usage-data.py"
          }
        ]
      }
    ]
  }
}
